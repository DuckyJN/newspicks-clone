<div class="modal-content-wrapper registration-wrapper" style="display: none">
  <div class="modal-content-dialog">
    <div class="modal-header">
    <img class="close-btn" src="/close.png" class="close" data-dismiss="modal">
      <h2 class="modal-title" id="myModalLabel">新規登録</h2>
      <div class="go-login">
        <span class="go-to">既にアカウントをお持ちの方は<span class="link">ログイン</span>へ</span>
      </div>
    </div>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field-input-box">
          <%= f.email_field :email, autofocus: true, placeholder: "登録するメールアドレス" %>
        </div>

        <div class="field-input-box">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "パスワード" %>
        </div>

        <div class="field-input-box">
          <%= f.password_field :password_confirmation, placeholder: "パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
