<!DOCTYPE html>
<html>
  <head>
    <title>NewsPicksClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <!-- Content Body -->
    <div class="wrapper">
      <%= render 'pages/stream' %>
      <%= render 'pages/content' %>
      <%= render 'pages/menu' %>
      <%= render 'pages/nav' %>
      <%= yield %>
    <div class="notice alert-info"><%= notice %></div>
    <div class="alert alert-warning"><%= alert %></div>
    <!-- Modal Content -->
    <div class="modal" style="display: none;">
      <div class="background"></div>
      <%= render partial: "devise/sessions/new" %>
    </div>
    <%= javascript_include_tag 'menu_items' %>
  </body>
</html>
