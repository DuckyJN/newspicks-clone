<!DOCTYPE html>
<html>
  <head>
    <title>NewsPicksClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Content Body -->
    <div class="wrapper">
      <div class="pick-stream fixed-left"></div>
      <div class="page-content"></div>
      <div class="header">
        <div class="hamburger-menu"></div>
        <div class="search-box-container global">
          <div class="search-box">
            <img class="search-icon" src="/search_icon.png">
            <div class="search-wrapper">
              <input class="search" maxlength="200" type="text" id="global-search-box" placeholder="検索する" value="">
            </div>
          </div>
        </div>
      <a class="logo clear-index-cache" href="/"><img src="/newspicks_logo.png"></a>
      <div class="right-items">
        <div class="register-or-login-items">
          <div class="register">アカウント登録</div>
          <div class="login">ログイン</div>
        </div>
      </div>
    </div>
    <div class="notice alert-info"><%= notice %></div>
    <div class="alert alert-warning"><%= alert %></div>
    <!-- Modal Content -->
    <%= link_to 'Login', new_user_session_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
    <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content"></div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
