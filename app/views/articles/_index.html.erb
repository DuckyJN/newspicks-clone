<div class="section top-news centering-page-content">
  <div class="news-container">
    <% Article.order("created_at DESC").limit(12).each do |article| %>
      <div class="news-card vertical">
        <%= link_to article do %>
          <div class="thumbnail" style="background-image: url(<%= article.image %>)"></div>
          <div class="article-title"><%=h truncate(article.title, length: 26) %></div>
        <% end %>
        <div class="meta">
          <div class="site"><%= article.site %></div>
        </div>
        <div class="comment-content">

        </div>
      </div>
    <% end %>
  </div>
</div>